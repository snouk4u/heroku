html
	head
		title= title
		link(href='/css/main.css', rel='stylesheet')
	body
		h1= title
		h2= message
		if isLoggedIn
			h3 ທ່ານ ໄດ້ເຂົ້າສູ່ລະບົບແລ້ວ.
			form(name='logout', method='POST', action='logout')
				div
					input(type='submit', value='ອອກ')
		else
			form(name='login', method='POST', action='login')
				div
					label(for='email') Email
					input(name='email', type='email', placeholder='youremail@email.com')
				div
					label(for='password') ລະຫັດຜ່ານ
					input(name='password', type='password', placeholder='password')
				div
					input(name='remember', type='checkbox', value='remember')
					| ຈື່ໄວ້
				div
					input(type='submit', value='ເຂົ້າລະບົບ')
		


		img(src='/img/test.jpg', width='100%', alt='Test') 